
<h1>New Rants</h1>

  <% if @rant.errors.any? %>
    <% @rant.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_for @rant do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>


      <%= f.label :body %>
      <span class="countdown"></span>
      <%= f.text_area :body, class:"text-area message", :placeholder => "Start your rant"%>


    <%= f.submit "Save" %>
    <%= link_to "Cancel", rants_path %>

  <% end %>
